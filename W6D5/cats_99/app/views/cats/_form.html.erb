<% if type == :new %>
  <% action_url = cats_url %>
  <% button_text = "Create Cat"%>
<% else %>
  <% action_url = cat_url(cat) %>
  <% button_text = "Update Cat"%>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">Name:
    <input type="text" id="name" name="cat[name]" value="<%= cat.name %>">
  </label>
  <br>
  <label for="birth_date">Birth Date:
    <input type="date" id="birth_date" name="cat[birth_date]" value="<%= cat.birth_date %>">
  </label>
  <br>
  <label for="color">Color:
    <select name="cat[color]">
      <option value = "" selected disabled>-- select a color --</option>
      <option value = "Orange" <%= cat.color == "Orange" ? "selected" : "" %>>Orange</option>
      <option value = "Black" <%= cat.color == "Black" ? "selected" : "" %>>Black</option>
      <option value = "Brown" <%= cat.color == "Brown" ? "selected" : "" %>>Brown</option>
      <option value = "Purple" <%= cat.color == "Purple" ? "selected" : "" %>>Purple</option>
    </select>
  </label>
  <br>
  <label for="sex">Sex:
    <input type="radio" id ="sex" name="cat[sex]" value="F"  <%= cat.sex == "F" ? "checked" : "" %>> F
    <input type="radio" id ="sex" name="cat[sex]" value="M"  <%= cat.sex == "M" ? "checked" : "" %>> M
  </label>
  <br>
  <label for="description">Description:
    <input type="text" id="description" name="cat[description]" value="<%= cat.description %>">
  </label>
  <br>
  <input type="submit" value="<%=button_text%>">

</form>